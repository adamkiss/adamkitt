[*.*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[package.json, composer.json, *.md]
indent_size = 4
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[site/templates/emails/*.txt.php]
trim_trailing_whitespace = false

[.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc}]
indent_style = space
indent_size = 2
