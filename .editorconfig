[*.{css,scss,pcss,less,js,json,ts,sass,html,hbs,mustache,phtml,html.twig,md,php,taskpaper}]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[composer.json,*.md]
indent_size = 4
trim_trailing_whitespace = false

[package.json,.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc},*.yml]
indent_style = space
indent_size = 2
